<div class="container mt-3">
    <div class="row">
        <div class="col-lg-6">
            <% if (typeof errors != 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(error => { %>                         
                            <li><%= error.msg  %> </li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>
            <form method="post" action="/contact?_method=PUT">
                <input type="hidden" name="_id" value="<%= contact._id  %>">
                <input type="hidden" name="nama_hidden" value="<%= contact.nama_hidden || contact.nama %>">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" name="nama" id="name" value="<%= contact.nama %>">
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" id="email" value="<%= contact.email %>">
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Phone</label>
                    <input type="number" class="form-control" id="nohp" name="nohp" value="<%= contact.nohp %>">
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>